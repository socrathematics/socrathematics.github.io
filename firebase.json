{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "package.json",
      "package-lock.json",
      "ts-config.json",
      "emails/**",
      "blog/write/**",
      "publish.sh",
      "publish-alt.sh",
      "serve",
      "*.md",
      "tsconfig.json"
    ],
    "redirects": [
      {
        "source": "/request",
        "destination": "/request-course",
        "type": 301
      },
      {
        "source": "/course-request",
        "destination": "/request-course",
        "type": 301
      }
    ],
    "rewrites": [ {
      "source": "/bigben",
      "function": "bigben"
    },
      {
        "source": "/cc",
        "destination": "/cc/index.xml"
      },
      {
        "source": "/cc/index.html",
        "destination": "/cc/index.xml"
      }]

  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
